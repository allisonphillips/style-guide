#!/usr/bin/env ruby

formatter = '$(bundle show rubocop-junit-formatter)'
formatter += '/lib/rubocop/formatter/junit_formatter.rb'

system <<~COMMAND
  bundle exec rubocop \
    --require #{formatter} \
    --format RuboCop::Formatter::JUnitFormatter \
    --out test-results/rubocop/results.xml \
    --format progress \
    #{ARGV.join(' ')}
COMMAND
